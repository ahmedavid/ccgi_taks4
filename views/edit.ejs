<% include partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <form action="/bear/edit/" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Bear Name" value="<%=bear.name%>" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea required class="form-control" rows="10" placeholder="Describe a scary bear" name="description" id="description"><%=bear.description%></textarea>
                </div>
                <div class="form-group">
                    <label for="imgUrl">Image url</label>
                    <input required type="text" class="form-control" id="imgUrl" name="imgUrl" placeholder="Image Url" value="<%=bear.imgUrl%>">
                </div>
                <input type="hidden" name="id" value="<%=bear._id%>">
                <input type="hidden" name="rev" value="<%=bear._rev%>">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a href="/bear/<%=bear._id%>" class="btn btn-warning">Cancel</a>
            </form>
        </div>
    </div>
</div><!-- /.container -->
<% include partials/footer %>