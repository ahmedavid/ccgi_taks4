<% include partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Most Terrifying Bears</h3>
                </div>
                <div class="panel-body">
                    <div class="row front">
                        <% bears.forEach(function(bear){ %>
                            <div class="col-md-6">
                                <div class="col-md-6">
                                    <h4><a href="/bear/<%= bear.id %>"><%= bear.doc.name %></a></h4>
                                    <p><%= bear.doc.description.substr(0,100)+" ..."%></p>
                                    <a href="/bear/<%= bear.id %>" class="btn btn-success">Read More</a>
                                </div>
                                <div class="col-md-6">
                                    <a href="/bear/<%= bear.id %>"><img src="<%= bear.doc.imgUrl %>" class="thumbnail lazy"></a>
                                </div>
                            </div>
                        <%})%>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div><!-- /.container -->
<% include partials/footer %>