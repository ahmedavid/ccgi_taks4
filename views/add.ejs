<% include partials/header %>
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <form action="/add" method="post">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Bear Name" required>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea required class="form-control" rows="10" placeholder="Describe a scary bear" name="description" id="description"></textarea>
                </div>
                <div class="form-group">
                    <label for="imgUrl">Image url</label>
                    <input type="text" class="form-control" id="imgUrl" name="imgUrl" placeholder="Image Url" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div><!-- /.container -->
<% include partials/footer %>